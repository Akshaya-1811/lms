# k8s 2 node cluster deletion #
pipeline {
    agent {
    node {
        label 'slave'
         }
    }
    stages {
        stage('delete k8s cluster') {
            steps {
                sh 'kops delete cluster --state=s3://lms-k8s-cluster --name=lms.k8s.local --yes'
            }
        }
        stage('aws s3 bucket delete') {
            steps {
                sh 'aws s3 rb s3://lms-k8s-cluster --force  '
            }
        }
    }
}
